<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/backgrounnd"
    android:id="@+id/lista_clientes"
    android:layout_marginBottom="30dp">

    <ImageView
        android:id="@+id/item_foto"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/item_nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/item_foto"
        android:text="Nombre"
        android:layout_marginLeft="15dp"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/item_apellido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/item_foto"
        android:text="Apellido"
        android:layout_below="@+id/item_nombre"
        android:layout_marginLeft="15dp"
        android:textColor="@color/black"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/item_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/item_foto"
        android:text="Email"
        android:layout_below="@+id/item_apellido"
        android:layout_marginLeft="15dp"
        android:textColor="@color/black"
        android:textSize="18dp" />


    <TextView
        android:id="@+id/item_direccion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_email"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/item_foto"
        android:text="Direccion"
        android:textColor="@color/black"
        android:textSize="18dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_direccion"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="8dp"

        >
        <Button
            android:id="@+id/editar"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:textSize="10dp"
            app:backgroundTint="@color/botonInicio"
            android:text="@string/editar"
            >
        </Button>
        <Button
            android:id="@+id/eliminar"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:textSize="10dp"
            app:backgroundTint="@color/botonInicio"
            android:text="@string/eliminar"
            >
        </Button>
    </LinearLayout>



</RelativeLayout>
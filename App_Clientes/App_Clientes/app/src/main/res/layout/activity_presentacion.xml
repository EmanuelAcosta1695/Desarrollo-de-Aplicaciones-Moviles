<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PresentacionActivity"
    android:background="@color/textoInicio">

    <ImageView
        android:id="@+id/trigo"
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/trigo4">

    </ImageView>

    <TextView
        android:id="@+id/Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="225dp"
        android:background="@color/textoInicio"
        android:text="Panaderia Brown"
        android:textSize="40dp"
        android:textStyle="bold|italic"
        />


    <Button
        android:id="@+id/btnClientes"
        android:layout_width="110dp"
        android:layout_height="45dp"
        android:layout_below="@+id/Title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="@string/clientes"
        app:backgroundTint="@color/botonInicio"></Button>


    <Button
        android:id="@+id/btnAyuda"
        android:layout_width="110dp"
        android:layout_height="45dp"
        android:layout_below="@+id/btnClientes"
        android:layout_centerHorizontal="true"
        android:text="@string/ayuda"
        app:backgroundTint="@color/botonInicio"></Button>

</RelativeLayout>